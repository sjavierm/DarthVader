package marioParty;

import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.Test;

public class TestMarioParty {

	@Test
public void testGameController() {
		

		GameController gc = new GameController();
		int resp=gc.validarParametros(-1,19);
		int resp1=gc.validarParametros(2, 0);
		int resp2=gc.validarParametros(2, 25);
		int resp3=gc.validarParametros(3, 25);
		int resp4=gc.validarParametros(4, 100);
		int resp5=gc.validarParametros(1, 200);
		int resp6=gc.validarParametros(2, -1);
		int resp7=gc.validarParametros(2, 25);
		
		assertEquals(-1, resp);
		assertEquals(-1, resp1);
		assertEquals(1, resp2);
		assertEquals(1, resp3);
		assertEquals(1, resp4);
		assertEquals(-1, resp5);
		assertEquals(-1, resp6);
		assertEquals(1, resp7);
		
		
		
	}

}
